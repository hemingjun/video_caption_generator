# API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here

# Default Settings
DEFAULT_TRANSLATOR=openai  # Options: openai, claude
DEFAULT_TARGET_LANG=zh     # Target language code (ISO 639-1)
DEFAULT_WHISPER_MODEL=base # Options: tiny, base, small, medium, large
DEFAULT_OUTPUT_FORMAT=srt  # Options: srt, txt, json

# Advanced Settings
WHISPER_DEVICE=cpu         # Options: cuda (for GPU), cpu
MAX_SEGMENT_LENGTH=5000    # Maximum segment length in characters for translation
API_TIMEOUT=30             # API request timeout in seconds
API_MAX_RETRIES=3          # Maximum number of API retry attempts
API_RETRY_DELAY=1          # Delay between retries in seconds

# Output Settings
OUTPUT_DIR=./output        # Default output directory
TEMP_DIR=./temp           # Temporary files directory
KEEP_TEMP_FILES=false     # Whether to keep temporary files after processing

# Logging
LOG_LEVEL=INFO            # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/app.log   # Log file path
LOG_FORMAT=detailed       # Options: simple, detailed

# Performance
BATCH_SIZE=10             # Number of segments to translate in one API call
MAX_CONCURRENT_REQUESTS=5 # Maximum concurrent API requests